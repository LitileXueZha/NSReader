{
    "root": true,
    "env": {
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 4],
        "react/jsx-filename-extension": "off",
        "react/jsx-indent": ["error", 4],
        "react/prefer-stateless-function": "off",
        "import/no-extraneous-dependencies": ["error", {"packageDir": ["./", "../"]}]
    }
}
